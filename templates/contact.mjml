<mjml>
  <mj-head>
    <mj-preview>{{ subject }}</mj-preview>

    <mj-font
      name="Inter"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
    />

    <mj-attributes>
      <mj-all font-family="Inter, Arial, sans-serif" />
      <mj-text color="#1f2937" font-size="16px" line-height="1.7" />
      <mj-button
        background-color="#047857"
        color="#ffffff"
        font-size="16px"
        border-radius="8px"
        padding="14px 30px"
        font-weight="600"
      />
    </mj-attributes>

    <mj-style inline="inline">
      .footer-link a {
        color: #10b981 !important;
        text-decoration: none;
      }
      .footer-link a:hover {
        text-decoration: underline;
      }
    </mj-style>
  </mj-head>

  <mj-body background-color="#f9fafb">
    <!-- HEADER -->
    <mj-section
      background-color="#ffffff"
      padding="25px 0"
      border-bottom="1px solid #e5e7eb"
    >
      <mj-column>
        <mj-image
          width="160px"
          src="https://www.gracerouteltd.com/logo-new-removebg-preview.png"
          alt="Grace Route Limited Logo"
          align="center"
        />
      </mj-column>
    </mj-section>

    <!-- HERO -->
    <mj-section background-color="#047857" padding="50px 20px 30px 20px">
      <mj-column>
        <mj-text
          align="center"
          color="#ffffff"
          font-size="24px"
          font-weight="700"
        >
          {{ subject }}
        </mj-text>

        <mj-text
          align="center"
          color="#d1fae5"
          font-size="15px"
          padding-top="10px"
        >
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- MAIN CONTENT -->
    <mj-section background-color="#ffffff" padding="35px 25px">
      <mj-column>
        <mj-text font-size="18px" font-weight="600" color="#111827">
          Hello {{ name }},
        </mj-text>

        <mj-text padding-top="10px">
          {{ message }}
        </mj-text>
        <mj-text padding-top="10px">
          <strong>From:</strong> {{ name }}
          <br />
          <strong>Email:</strong> {{ email }}
          <br />
          <strong>Phone:</strong> {{ phone }}
        </mj-text>

        <mj-text padding-top="20px">
          Best regards,<br />
          <strong>The Grace Route Limited Team</strong>
        </mj-text>

        <mj-button
          href="https://www.gracerouteltd.com"
          align="center"
          padding-top="25px"
        >
          Visit Our Website
        </mj-button>
      </mj-column>
    </mj-section>

    <!-- FOOTER -->
    <mj-section background-color="#111827" padding="30px 0 20px 0">
      <mj-column>
        <mj-text align="center" color="#e5e7eb" font-size="13px">
          © {{ year }} Grace Route Limited. All rights reserved.
        </mj-text>

        <mj-text
          align="center"
          color="#9ca3af"
          font-size="12px"
          css-class="footer-link"
          padding-top="5px"
        >
          <a href="https://www.gracerouteltd.com">Website</a> •
          <a href="mailto:info@gracerouteltd.com">Support</a>
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
